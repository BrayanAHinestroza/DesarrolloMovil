<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_height="wrap_content"
    android:layout_width="match_parent"
    app:cardElevation="4dp"
    app:cardCornerRadius="8dp"
    android:layout_marginHorizontal="16dp"
    android:layout_marginVertical="8dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="8dp">

        <TextView
            android:id="@+id/tv_profesor_home_eventos_estudiante_rol"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:textStyle="bold"
            android:gravity="center_vertical"
            android:text="User Full Name" />

        <TextView
            android:id="@+id/tv_profesor_home_eventos_estudiante_nombre"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:gravity="center_vertical"
            android:text="User Full Name" />

        <TextView
            android:id="@+id/tv_profesor_home_eventos_estudiante_email"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:gravity="center_vertical"
            android:text="User Email" />

        <TextView
            android:id="@+id/tv_profesor_home_eventos_estudiante_programa"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:gravity="center_vertical"
            android:text="User Academic Program" />

        <TextView
            android:id="@+id/tv_profesor_home_eventos_estudiante_fecha_confirm"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:gravity="center_vertical"
            android:text="User Confirm Date" />
    </LinearLayout>
</androidx.cardview.widget.CardView>